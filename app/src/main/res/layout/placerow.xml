<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#242424">

    <ImageView
        android:id="@+id/photosViewList"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameLbl"
        android:layout_width="wrap_content"
        android:layout_height="37sp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/roboto"
        android:text="Estadio Pascual Guerrero"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintStart_toEndOf="@+id/photosViewList"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ratingLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/roboto"
        android:text="4,0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photosViewList"
        app:layout_constraintTop_toBottomOf="@+id/nameLbl" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="17dp"
        android:foregroundTint="#FFFFFF"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ratingLbl"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/star" />

    <ImageButton
        android:id="@+id/visibilityBtn"
        style="@android:style/Widget.ImageButton"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/eye" />
</androidx.constraintlayout.widget.ConstraintLayout>